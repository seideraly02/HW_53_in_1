@model List<Description>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}


<h2>описание устройств</h2>
<div class="table_section">
    <a asp-action="Create" asp-controller="Phones">добавить описание</a>
    @if (@Model.Count == 0)
    {
        <p>описание пуст</p>
    }
    else
    {
        <table class="custom_table" style="width: 100%">
            <tr>
                <td>Id</td>
                <td>Найменование</td>
                <td>Цвет</td>
                <td>Процессор</td>
                <td>Емкость Батарей</td>
            </tr>
            @foreach (var description in Model)
            {
                <tr>
                    <td>@description.Id</td>
                    <td>@description.Name</td>
                    <td>@description.Color</td>
                    <td>@description.Processor</td>
                    <td>@description.Battery</td>
                </tr>
            }
        </table>
    }
</div>